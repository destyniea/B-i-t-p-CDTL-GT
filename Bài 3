#include <bits/stdc++.h>
using namespace std;


int main(){
    int t; cin >> t;
    while(t--){ // O(t);
        int n; cin >> n;
        int a[n];
        for(int i=0 ; i <n ; i++){ // O(n)
            cin >> a[i];
        }
        int check = 0;
        for(int i=0 ; i<n/2 ; i++){ // O(n/2)
            if(a[i] != a[n-i-1] ){
                check = 1;
                break;
            }
        }
        if( !check ) cout << "YES";
        else cout << "NO";
        cout << endl;
    }
}
// => Độ phức tạp = O(t)(O(n)+O(n)) = O(t.n)
